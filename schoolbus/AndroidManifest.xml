<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdu.online.schoolbus"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="15" />
    
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"
            android:label="@string/title_activity_main" android:configChanges="keyboard|orientation|keyboardHidden"/>
        <activity android:name=".SelectFromActivity"
            android:label="@string/app_name" android:configChanges="keyboard|orientation|keyboardHidden"/>
		<activity android:name=".UserGuideActivity"
            android:label="@string/app_name" android:configChanges="keyboard|orientation|keyboardHidden" />            
        <activity android:name=".SearchActivity" android:label="@string/app_name"
            android:configChanges="keyboard|orientation|keyboardHidden" />
        <activity android:name=".ChooseDesActivity" android:label="@string/app_name" 
            android:theme="@style/Dialog.NoTitle" android:configChanges="keyboard|orientation|keyboardHidden" />
        <activity android:name=".SettingsActivity" android:label="@string/settings"
            android:theme="@android:style/Theme.Black" android:configChanges="keyboard|orientation|keyboardHidden"/>
        <activity android:name=".DownloadActivity"
            android:theme="@style/Dialog.NoTitle" android:configChanges="keyboard|orientation|keyboardHidden" />
        <activity android:name=".WarnDialog"  android:theme="@android:style/Theme.Dialog"
            android:label="@string/update_warn" android:configChanges="keyboard|orientation|keyboardHidden" />
        <activity android:name=".UpdateActivity" android:theme="@android:style/Theme.Dialog" 
            android:label="@string/update_title" android:configChanges="keyboard|orientation|keyboardHidden" />
        <activity android:name=".About" android:label="@string/about"
             android:theme="@android:style/Theme.Black" android:configChanges="keyboard|orientation|keyboardHidden"/>
        <activity android:name=".SplashActivity">
              <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>   
        </activity>
		<service android:name=".UpdateService" />        
    </application>

</manifest>