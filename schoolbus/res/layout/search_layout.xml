<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/search_layout_title_layout"
        android:layout_height="40dp"
        android:layout_width="fill_parent" 
        >
        <TextView
            android:id="@+id/search_layout_title_tv"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAppearance="@android:style/TextAppearance.Large"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/search_layout_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >
    <LinearLayout
        android:id="@+id/search_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/search_top_height"
        >
        <LinearLayout
            android:id="@+id/search_layout_top_left"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:orientation="vertical" 
            >
            <TextView
             android:id="@+id/search_layout_schedule"
             android:textStyle="italic"
            android:layout_height="@dimen/search_top_text_height"
            android:layout_width="fill_parent"
            android:textColor="@color/main_color_blue"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_large"
            android:text="@string/schedule_tip_summer"
            android:gravity="center"
            />
            <TextView
             android:id="@+id/search_layout_weekday"
            android:layout_height="@dimen/search_top_text_height"
            android:layout_width="fill_parent"
            android:background="@color/main_color_blue"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:text="@string/time_nowork"
            android:textColor="@color/main_color_light"
            android:gravity="center"
            android:textSize="@dimen/choose_weekday_text_size"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/search_layout_choose_des"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_weight="1.49"
            android:text="@string/choose_des_tip"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/main_color_light"
            android:gravity="center"
            android:background="@color/main_color_blue" />

        <ImageView
            android:id="@+id/search_layout_search_image"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_gravity="bottom"
            android:background="@color/main_color_blue"
            android:src="@drawable/search_button" 
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            />
        
    </LinearLayout>
	</LinearLayout>
	    <RelativeLayout
        android:id="@+id/search_layout_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:padding="@dimen/padding_xlarge"
        >
        <ListView
            android:id="@+id/search_layout_listview"
        	android:background="@color/main_color_alpha"
            style="@style/ListView.style.Main"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:scrollbars="vertical" 
            />
        <LinearLayout
            android:id="@+id/search_layout_no_found_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:gravity="center" 
            android:orientation="vertical"
            >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/no_found"
            />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/search_no_found"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>