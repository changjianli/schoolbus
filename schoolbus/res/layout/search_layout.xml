<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_01"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/select_from_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:background="@drawable/bg_title_01"
        >
        
        <TextView
            android:id="@+id/search_tv_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Large"
             
            />
        
        <ImageView
            android:id="@+id/change_bg_iv"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_changetheme" 
            />
    </RelativeLayout>
    <!-- 搜索 -->
    <LinearLayout
        android:id="@+id/search_layout_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >
    <LinearLayout
        android:id="@+id/search_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
            <TextView
             android:id="@+id/search_layout_schedule"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_large"
            android:text="@string/schedule_tip_summer"
            android:textColor="@color/main_color_dark"
            android:gravity="center"
            />
            
        <LinearLayout
            android:id="@+id/search_layout_top_left"
            android:layout_height="@dimen/search_top_text_height"
            android:layout_width="fill_parent"
            >
            <TextView
             android:id="@+id/search_layout_weekday"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:background="@drawable/btn_bg_01"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_large"
            android:text="@string/time_nowork"
            android:textColor="@color/main_color_light"
            android:gravity="center"
            android:textSize="@dimen/choose_weekday_text_size"
            />
            
        <TextView
            android:id="@+id/search_layout_choose_des"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:text="@string/choose_des_tip"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/main_color_light"
            android:gravity="center"
            android:background="@drawable/btn_bg_01" />

        <ImageView
            android:id="@+id/search_layout_search_image"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_bg_01"
            android:src="@drawable/ic_search_01" 
            android:padding="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            />
        </LinearLayout>

        
    </LinearLayout>
	</LinearLayout>
	    <RelativeLayout
        android:id="@+id/search_layout_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:padding="@dimen/padding_xlarge"
        >
        <ListView
            android:id="@+id/search_layout_listview"
        	android:background="@color/main_color_alpha"
            style="@style/ListView.style.Main"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:scrollbars="vertical" 
            />
        <LinearLayout
            android:id="@+id/search_layout_no_found_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:gravity="center" 
            android:orientation="vertical"
            >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/no_found"
            />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/search_no_found"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        </LinearLayout>
    </RelativeLayout>

    
</LinearLayout>