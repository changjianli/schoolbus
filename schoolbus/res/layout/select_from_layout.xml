<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/select_from_layout_top"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:background="@color/main_color_blue"
        >
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Large"
             
            />
        
        <ImageView
            android:id="@+id/settings"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/settings_button" 
            />
    </RelativeLayout>
    
	    
	<RelativeLayout
	    android:id="@+id/select_from_layout_bottom"
	    android:layout_alignParentBottom="true"
	    android:layout_height="40dp"
	    android:layout_width="fill_parent"
	    >
	    <LinearLayout
	        android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:paddingTop="20dp"
	        android:layout_centerHorizontal="true"
	        >
	        
	    <ImageView
	        android:id="@+id/select_from_layout_iv1"
	        android:layout_height="10dp"
	        android:layout_width="10dp" 
	        android:src="@drawable/point_selected"
	        />
	    <ImageView
	        android:id="@+id/select_from_layout_iv2"
	        android:layout_height="10dp"
	        android:layout_width="10dp" 
	        android:src="@drawable/point_normal"
	        />
	    
	    </LinearLayout>
	    
	</RelativeLayout>
	
	
	<android.support.v4.view.ViewPager
	    android:layout_below="@id/select_from_layout_top"
	    android:layout_above="@id/select_from_layout_bottom"
	    android:id="@+id/select_from_layout_viewpager"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    />
	
</RelativeLayout>